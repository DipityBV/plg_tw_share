<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="content" method="upgrade">
	<name>Content - Teemr Works Social Sharing</name>
	<author>Teemr</author>
	<creationDate>21 October 2015</creationDate>
	<copyright>Copyright (C) 2015 Teemr Works. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>jasper@teemr.com</authorEmail>
	<authorUrl>teemr.com</authorUrl>
	<version>0.0.1</version>
	<description>A plugin that enables social sharing.</description>
	<files>
		<filename plugin="twshare">twshare.php</filename>
		<folder>media</folder>
	</files>
	<media folder="media" destination="plg_tw_share">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
	</media>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field type="spacer" label="Basic plugins&lt;hr/&gt;" />
				<field
						type="radio"
						label="Enable highlighting"
						name="enable_highlight"
						default="1"
						class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
						type="radio"
						label="Enable selection"
						name="enable_selection"
						default="1"
						class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field type="spacer" label="Service settings&lt;hr/&gt;" />
				<field
						type="radio"
						label="Enable Twitter"
						name="enable_twitter"
						default="1"
						class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
						type="radio"
						label="Enable Facebook"
						name="enable_facebook"
						default="1"
						class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
						type="radio"
						label="Enable Pinterest"
						name="enable_pinterest"
						default="1"
						class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
						type="radio"
						label="Enable Google Plus"
						name="enable_google_plus"
						default="1"
						class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
						type="spacer"
						label="Highlight settings&lt;hr/&gt;" />
				<field
						type="color"
						label="Highlight background color"
						name="highlight_color"
						default="#FFFACD" />
				<field
						type="list"
						label="Hightlight popup location"
						name="highlight_location"
						default="">
					<option>Cursor</option>
					<option value="top">Top</option>
					<option value="bottom">Bottom</option>
					<option value="left">Left</option>
					<option value="right">Right</option>
				</field>

				<field
						type="spacer"
						label="Selection settings&lt;hr/&gt;"/>
				<field
						type="text"
						name="element selectors"
						description="The selectors of elements"/>
				<field
						type="list"
						label="Selection popup location"
						name="select_location"
						default="">
					<option>Cursor</option>
					<option value="top">Top</option>
					<option value="bottom">Bottom</option>
					<option value="left">Left</option>
					<option value="right">Right</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>

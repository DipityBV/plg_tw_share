<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="content" method="upgrade">
	<name>Content - Teemr Works Social Sharing</name>
	<author>Teemr Works</author>
	<creationDate>21 October 2015</creationDate>
	<copyright>Copyright (C) 2015 Teemr Works. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>jasper@teemr.com</authorEmail>
	<authorUrl>teemr.works</authorUrl>
	<version>0.0.1</version>
	<description>PLG_CONTENT_TW_SHARE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="tw_share">tw_share.php</filename>
		<folder>media</folder>
		<folder>language</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_tw_share.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_tw_share.sys.ini</language>
	</languages>
	<media folder="media" destination="plg_tw_share">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
	</media>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field type="spacer"
					   label="&lt;br/&gt;&lt;strong&gt;Selection sharing allows a user selected fragment of text to be shared accross enabled platforms.&lt;/strong&gt;" />
				<field
						type="radio"
						label="Enable selection sharing"
						name="enable_selection"
						default="1"
						class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field type="spacer"
					   label="&lt;br/&gt;&lt;strong&gt;Mark fragments of text to be shared. Use &lt;code&gt;{share}fragment{/share}&lt;/code&gt; to highlight the fragment from the CMS.&lt;/strong&gt;" />
				<field
						type="radio"
						label="Enable fragment sharing"
						name="enable_highlight"
						default="1"
						class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
			<fieldset name="Selection">
				<field
						type="radio"
						label="PLG_CONTENT_TW_SHARE_FIELD_ENABLE_TWITTER_LABEL"
						name="selection_enable_twitter"
						default="1"
						class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
						type="radio"
						label="PLG_CONTENT_TW_SHARE_FIELD_ENABLE_FACEBOOK_LABEL"
						name="selection_enable_facebook"
						default="1"
						class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
						type="radio"
						label="PLG_CONTENT_TW_SHARE_FIELD_ENABLE_PINTEREST_LABEL"
						name="selection_enable_pinterest"
						default="1"
						class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
						type="radio"
						label="PLG_CONTENT_TW_SHARE_FIELD_ENABLE_GOOGLE_PLUS_LABEL"
						name="selection_enable_google_plus"
						default="1"
						class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
						type="text"
						name="selectors"
						label="PLG_CONTENT_TW_SHARE_FIELD_CONTAINER_LABEL"
						description="PLG_CONTENT_TW_SHARE_FIELD_CONTAINER_DESC"/>
				<field
						type="list"
						label="Selection popup location"
						name="select_location"
						default="top">
					<option>Cursor</option>
					<option value="top">Top</option>
					<option value="bottom">Bottom</option>
					<option value="left">Left</option>
					<option value="right">Right</option>
				</field>
			</fieldset>
			<fieldset name="Highlight">
				<field
						type="radio"
						label="PLG_CONTENT_TW_SHARE_FIELD_ENABLE_TWITTER_LABEL"
						name="highlight_enable_twitter"
						default="1"
						class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
						type="radio"
						label="PLG_CONTENT_TW_SHARE_FIELD_ENABLE_FACEBOOK_LABEL"
						name="highlight_enable_facebook"
						default="1"
						class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
						type="radio"
						label="PLG_CONTENT_TW_SHARE_FIELD_ENABLE_PINTEREST_LABEL"
						name="highlight_enable_pinterest"
						default="1"
						class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
						type="radio"
						label="PLG_CONTENT_TW_SHARE_FIELD_ENABLE_GOOGLE_PLUS_LABEL"
						name="highlight_enable_google_plus"
						default="1"
						class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
						type="list"
						label="PLG_CONTENT_TW_SHARE_FIELD_POPUP_POSITION_LABEL"
						name="highlight_location"
						default="top">
					<option>Cursor</option>
					<option value="top">Top</option>
					<option value="bottom">Bottom</option>
					<option value="left">Left</option>
					<option value="right">Right</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
